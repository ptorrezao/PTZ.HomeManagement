@model List<ReminderOverviewListItem>

@{

}
<div class="col-xl-3 col-md-6 col-lg-6 col-sm-12">
    <div class="card ">

        <div class="card-header ">
            <h4 class="card-title">Lembretes</h4>
        </div>
        <div class="card-body ">
            @foreach (var item in Model)
            {
                <div class="row reminderRow ">
                    <div class="col-lg-12">
                        <div class="card card-stats">
                            <div class="card-body ">
                                <a href="@Url.Action(nameof(ExpirationReminderController.ListReminders),"ExpirationReminder",new { type = item.Type })">
                                    <div class="row no-margin">
                                        <div class="col-5">
                                            <div class="icon-big text-center icon-warning">
                                                <em class="nc-icon @item.Type.GetIcon()" style="color: @item.Type.GetColor()"></em>
                                            </div>
                                        </div>
                                        <div class="col-7">
                                            <div class="numbers">
                                                <p class="card-category"> @item.Type.GetDescription()</p>
                                                <h4 class="card-title">@item.Quantity</h4>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<style>
    .no-margin {
        margin: 0px !important;
    }

    .reminderRow {
        margin-bottom: 10px !important;
    }
</style>