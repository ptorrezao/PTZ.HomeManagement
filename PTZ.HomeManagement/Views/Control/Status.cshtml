@model StatusViewModel
@inject IViewLocalizer localizer
<div class="row">
    <div class="col-lg-3 col-sm-6">
        <div class="card card-stats">
            <div class="card-body ">
                <div class="row">
                    <div class="col-5">
                        <div class="icon-big text-center icon-warning">
                            <em class="nc-icon nc-app text-info"></em>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="numbers">
                            <p class="card-category">@localizer["MachineName"]</p>
                            <h4 class="card-title">@Model.MachineName</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card card-stats">
            <div class="card-body ">
                <div class="row">
                    <div class="col-5">
                        <div class="icon-big text-center icon-warning">
                            <em class="nc-icon nc-app text-warning"></em>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="numbers">
                            <p class="card-category">@localizer["MemoryUsage"]</p>
                            <h4 class="card-title">@Model.TotalMemory MB</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card card-stats">
            <div class="card-body ">
                <div class="row">
                    <div class="col-5">
                        <div class="icon-big text-center icon-warning">
                            <em class="nc-icon nc-app text-success"></em>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="numbers">
                            <p class="card-category">@localizer["Enviroment"]</p>
                            <h4 class="card-title">@Model.Environment</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card card-stats">
            <div class="card-body ">
                <div class="row">
                    <div class="col-5">
                        <div class="icon-big text-center icon-warning">
                            <em class="nc-icon nc-app text-danger"></em>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="numbers">
                            <p class="card-category">@localizer["OSVersion"]</p>
                            <h4 class="card-title">@System.Environment.OSVersion</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card card-stats">
            <div class="card-body ">
                <div class="row">
                    <div class="col-5">
                        <div class="icon-big text-center icon-warning">
                            <em class="nc-icon nc-app text-danger"></em>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="numbers">
                            <p class="card-category">@localizer["DefaultConnection"]</p>
                            <h4 class="card-title">@Model.DefaultConnection</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>