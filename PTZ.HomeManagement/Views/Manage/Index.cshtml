@model IndexViewModel
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Profile"];
    //ViewData.AddActivePage(ManageNavPages.Index);
}

@Html.Partial("_StatusMessage", Model.StatusMessage)

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@ViewBag.Title</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Username" class="form-control" disabled />
                                @Html.HiddenFor(x => x.Username)
                                @if (Model.Email == Model.Username)
                                {
                                    @Html.HiddenFor(x => x.Email)
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            @if (Model.Email != Model.Username)
                            {
                                <div class="form-group">
                                    @if (Model.IsEmailConfirmed)
                                    {
                                        <label asp-for="Email"></label>
                                        <input disabled asp-for="Email" class="form-control" />
                                        @Html.HiddenFor(x => x.Email)
                                    }
                                    else
                                    {
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" class="form-control" value="@Model.Username" />

                                    }
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @if (!Model.IsEmailConfirmed)
                            {
                                <div class="form-group">
                                    <button asp-action="SendVerificationEmail" class="btn btn-fill btn-warning btn-block">
                                        @localizer["SendVerificationEmail"]
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber"></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-info btn-fill pull-right">@localizer["Save"]</button>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
