@model AccountMovementImportViewModel
@inject IViewLocalizer localizer
@{
    ViewBag.Title = ModulesNames.MyFinance;
    LocalizedHtmlString title = localizer["ImportTitle"];
    LocalizedHtmlString returnButton = localizer["returnButton"];
    LocalizedHtmlString button = localizer["button"];
    LocalizedHtmlString selectFile = localizer["SelectFile"];
}
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@title</h4>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <input asp-for="BankAccountId" hidden />
                            <label asp-for="ImportType"></label>
                            <select asp-for="ImportType" asp-items="Model.AvailableImportTypes" class="btn-group selectpicker"></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="upload-btn-wrapper">
                                <button class="btn btn-info btn-fill ">
                                    <span class="btn-label">
                                        <i class="fa fa-upload"></i>
                                    </span>@selectFile
                                </button>
                                <input type="file" name="file">
                            </div>
                        </div>
                    </div>
                    <div class="pull-right">
                        <a href="@Url.Action(nameof(MyFinanceController.ListMovements), new { bankAccountId=Model.BankAccountId })" class="btn btn-sm btn-default btn-outline">
                            <span class="btn-label">
                                <i class="fa fa-arrow-left"></i>
                            </span>@returnButton
                        </a> &nbsp;
                        <button type="submit" class="btn btn-sm btn-info btn-fill ">
                            <span class="btn-label">
                                <i class="fa fa-plus"></i>
                            </span>@button
                        </button>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}