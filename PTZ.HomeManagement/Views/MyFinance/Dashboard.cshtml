@model DashboardViewModel
@inject IViewLocalizer localizer
@{
    ViewBag.Title = ModulesNames.MyFinance;
    //ViewData.AddActivePage(ManageNavPages.Index);
}
<div class="container-fluid">
    <div class="row ">
        @Html.DisplayFor(x => x.Balance, new { Type = "pie", Size = "col-xl-3 col-lg-6 col-md-4 col-sm-12 balanceCard " })
        @Html.DisplayFor(x => x.Categories, new { Type = "bar", YStacked = false, Size = "col-xl-4 col-md-8 col-lg-6 col-sm-12 categoriesCard", Title = "Movimentos por Categorias", Subtitle = " ", Legend = false })
        @Html.DisplayFor(x => x.MonthlyProgression, new { Type = "line", YStacked = false, Size = "col-md-12 col-xl-5" })
    </div>

    <div class="row">
        <div class="col-xl-12 col-md-12 col-lg-12 col-sm-12">
            <div class="card ">
                <div class="card-header ">
                    <h4 class="card-title">Listagem de Contas</h4>
                </div>
                <div class="card-body ">
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                @{
                                    var total = Model.Balance.Assets.Sum(x => x.Amount);
                                }
                                @foreach (var item in Model.Balance.Assets)
                                {
                                    var relativePercentage = item.Amount * 100 / total;
                                    <text>
                                        <tr>
                                            <td>
                                                <span class="badge " style="background-color: @item.Color">@item.AccountTitle</span>
                                            </td>
                                            <td></td>
                                            <td class="text-right">
                                                @item.Amount.ConvertToCurrency("€")
                                            </td>
                                            <td class="text-right">
                                                @relativePercentage.ConvertToPercentage()
                                            </td>
                                        </tr>
                                    </text>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .balanceCard .card-body,
    .categoriesCard .card-body {
        padding-top: 16%;
    }

    .card {
        height: 100%;
        margin-bottom: 0px;
    }

    .row:first-child {
        margin-bottom: 30px;
    }
</style>
