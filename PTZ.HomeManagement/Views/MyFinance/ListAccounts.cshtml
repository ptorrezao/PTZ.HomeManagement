@inject IViewLocalizer localizer
@model AccountListViewModel
<div class="col-md-12">
    <div class="card strpied-tabled-with-hover">
        <div class="card-header ">
            <h4 class="card-title">Striped Table with Hover</h4>
            <p class="card-category text-right">

            </p>
        </div>
        <div class="card-body table-full-width table-responsive">

            <table class="table table-striped dataTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(x => x.Items.First().Id)</th>
                        <th>@Html.DisplayNameFor(x => x.Items.First().Name)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AccountListItemViewModel item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td class="no-sort"><a class="text-left btn btn-sm btn-info btn-outline btn-fill" asp-action="EditAccount" asp-route-id="@item.Id">@localizer["Edit"]</a> &nbsp; <a class="text-left btn btn-sm btn-info btn-outline btn-fill" asp-action="DeleteAccount" asp-route-id="@item.Id">@localizer["Delete"]</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a class="text-left btn btn-sm btn-info btn-outline btn-fill" asp-action="AddAccount">
                <span class="btn-label">
                    <i class="fa fa-plus"></i>
                </span>
                @localizer["Add"]
            </a>
        </div>

    </div>
</div>
