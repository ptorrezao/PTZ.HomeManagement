@inject IViewLocalizer localizer
@model AccountListViewModel

@{
    ViewBag.Title = ModulesNames.MyFinance;
}
<div class="col-md-12">
    <div class="card strpied-tabled-with-hover">
        <div class="card-header ">
            <h4 class="card-title">@localizer["Title"]</h4>
            <p class="card-category text-right">

            </p>
        </div>
        <div class="card-body table-full-width table-responsive">

            <table class="table table-striped dataTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(x => x.Items.First().Id)</th>
                        <th>@Html.DisplayNameFor(x => x.Items.First().Name)</th>
                        <th>@Html.DisplayNameFor(x => x.Items.First().Bank)</th>
                        <th>@Html.DisplayNameFor(x => x.Items.First().IBAN)</th>
                        <th class="no-sort"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AccountListItemViewModel item in Model.Items)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Bank</td>
                        <td>@item.IBAN</td>
                        <td class="no-sort">
                            <a class="text-left btn btn-sm btn-info btn-outline btn-fill" asp-action="AddOrEditAccount" asp-route-id="@item.Id">@localizer["Edit"]</a> &nbsp;
                            <a class="text-left btn btn-sm btn-info btn-outline btn-fill" asp-action="DeleteAccount" asp-route-id="@item.Id">@localizer["Delete"]</a> &nbsp;
                            <a class="text-left btn btn-sm btn-info btn-outline btn-fill" asp-action="ListMovements" asp-route-bankAccountId="@item.Id">@localizer["ListMovements"]</a> &nbsp;
                            <a class="text-left btn btn-sm btn-info btn-outline btn-fill" asp-action="ImportMovements" asp-route-bankAccountId="@item.Id">@localizer["ImportMovements"]</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a class="text-left btn btn-sm btn-info btn-outline btn-fill" asp-action="AddOrEditAccount">
                <span class="btn-label">
                    <i class="fa fa-plus"></i>
                </span>
                @localizer["Add"]
            </a>
        </div>

    </div>
</div>
