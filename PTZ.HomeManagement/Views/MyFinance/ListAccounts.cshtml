@inject IViewLocalizer localizer
@model AccountListViewModel

@{
    ViewBag.Title = ModulesNames.MyFinance;
}
<div class="col-md-12">
    <div class="card strpied-tabled-with-hover">
        <div class="card-header ">
            <h4 class="card-title">@localizer["Title"]</h4>
            <p class="card-category text-right">

            </p>
        </div>
        <div class="card-body table-full-width table-responsive">
            <table class="table table-striped dataTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(x => x.Items.First().Name)</th>
                        <th>@Html.DisplayNameFor(x => x.Items.First().Bank)</th>
                        <th>@Html.DisplayNameFor(x => x.Items.First().IBAN)</th>
                        <th class="no-sort"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AccountListItemViewModel item in Model.Items)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td><span class="badge badge-pill badge-secondary" style="background-color: @item.Color;">@item.Bank</span></td>
                            <td>@item.IBAN</td>
                            <td class="no-sort">
                                <a class="text-left btn btn-sm" data-toggle="tooltip" data-placement="top" title="@localizer["Edit"]" asp-action="AddOrEditAccount" asp-route-id="@item.Id"><em class="fa fa-edit"></em></a> &nbsp;
                                <a class="text-left btn btn-sm" data-toggle="tooltip" data-placement="top" title="@localizer["ListMovements"]" asp-action="ListMovements" asp-route-bankAccountId="@item.Id"><em class="fa fa-list-alt"></em></a> &nbsp;
                                <a class="text-left btn btn-sm" data-toggle="tooltip" data-placement="top" title="@localizer["ImportMovements"]" asp-action="ImportMovements" asp-route-bankAccountId="@item.Id"><em class="fa fa-file-import"></em></a> &nbsp;
                                <a class="text-left btn btn-sm btn-danger" data-toggle="tooltip" data-placement="top" title="@localizer["Delete"]" asp-action="DeleteAccount" asp-route-id="@item.Id"><em class="fa fa-trash"></em></a> &nbsp;
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a class="text-left btn btn-sm btn-info btn-outline btn-fill" asp-action="AddOrEditAccount" data-toggle="tooltip" data-placement="top" title="@localizer["Add"]">
                <span class="btn-label">
                    <em class="fa fa-plus"></em>
                </span>
            </a>
        </div>

    </div>
</div>
