@model AccountViewModel
@inject IViewLocalizer localizer
@{
    ViewBag.Title = ModulesNames.MyFinance;
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@localizer["Delete"]</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <label>@localizer["AreYouSure"]</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="Id"></label>
                                <input asp-for="Id" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label asp-for="Bank"></label>
                                <select asp-for="Bank" asp-items="Model.AvailableBanks" class="btn-group selectpicker form-control" disabled></select>
                                <span asp-validation-for="Bank" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-md-12">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" disabled />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="AccountType"></label>
                                <select asp-for="AccountType" asp-items="Model.AvailableAccountType" class="btn-group selectpicker form-control" disabled></select>
                                <span asp-validation-for="Bank" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="form-group">
                                <label asp-for="IBAN"></label>
                                <input asp-for="IBAN" class="form-control" disabled />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="pull-right">
                        <a href="@Url.Action(nameof(MyFinanceController.ListAccounts))" class="btn btn-sm btn-default btn-outline" data-toggle="tooltip" data-placement="top" title="@localizer["ReturnButton"]">
                            <span class="btn-label">
                                <i class="fa fa-arrow-left"></i>
                            </span>
                        </a> &nbsp;
                        <button type="submit" class="btn btn-sm btn-danger btn-fill " data-toggle="tooltip" data-placement="top" title="@localizer["DeleteButton"]">
                            <span class="btn-label">
                                <i class="fa fa-times"></i>
                            </span>
                        </button>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
