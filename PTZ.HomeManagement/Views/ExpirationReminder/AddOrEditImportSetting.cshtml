@model ImportSettingViewModel
@{
    ViewBag.Title = ModulesNames.ExpirationReminder;
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Configuração de Imports</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="Id"></label>
                                <input asp-for="Id" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="TitleFormat"></label>
                                <input asp-for="TitleFormat" class="form-control" />
                                <span asp-validation-for="TitleFormat" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label asp-for="TitleRexgex"></label>
                                <input asp-for="TitleRexgex" class="form-control" />
                                <span asp-validation-for="TitleRexgex" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="TitleRexgexTarget"></label>
                                <select asp-for="TitleRexgexTarget" asp-items="Model.AvailableTitleRexgexTargetTypes" class="btn-group selectpicker form-control" title="Selecione um Tipo"></select>
                                <span asp-validation-for="TitleRexgexTarget" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class=" col-md-4">
                        </div>
                        <div class=" col-md-5">
                            <div class="form-group">
                                <label asp-for="ExpirationDateRexgex"></label>
                                <input asp-for="ExpirationDateRexgex" class="form-control" />
                                <span asp-validation-for="ExpirationDateRexgex" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="ExpirationDateRexgexTarget"></label>
                                <select asp-for="ExpirationDateRexgexTarget" asp-items="Model.AvailableExpirationDateRexgexTargetTypes" class="btn-group selectpicker form-control" title="Selecione um Tipo"></select>
                                <span asp-validation-for="ExpirationDateRexgexTarget" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Label"></label>
                                <input asp-for="Label" class="form-control" />
                                <span asp-validation-for="Label" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="pull-right">
                        <a href="@Url.Action(nameof(ExpirationReminderController.ListImportSettings))" class="btn btn-sm btn-default btn-outline" data-toggle="tooltip" data-placement="top" title="Voltar">
                            <span class="btn-label">
                                <em class="fa fa-arrow-left"></em>
                            </span>
                        </a> &nbsp;
                        <button type="submit" class="btn btn-sm btn-info btn-fill  " data-toggle="tooltip" data-placement="top" title="Gravar">
                            <span class="btn-label">
                                <em class="fa fa-save"></em>
                            </span>
                        </button>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

}
